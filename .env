# AI-Dev RunPod Configuration
# Copy this file to .env and configure your API keys

# ================================
# RUNPOD CONFIGURATION
# ================================
RUNPOD_MODE=true
HOST=127.0.0.1
PORT=8080
WORKERS=4
MAX_WORKERS=8

# ================================
# UNCENSORED OPERATION SETTINGS
# ================================
UNCENSORED_MODE=true
DISABLE_CONTENT_FILTER=true
ALLOW_UNSAFE_CODE=true
BYPASS_SAFETY_CHECKS=true
DISABLE_MODERATION=true
SKIP_CONTENT_VALIDATION=true
ALLOW_ALL_REQUESTS=true

# ================================
# LLM BACKEND CONFIGURATION
# ================================
LLM_BACKEND=openai
# Options: openai, anthropic, local, ollama

# Model Parameters for Uncensored Operation
MODEL_TEMPERATURE=0.9
MODEL_TOP_P=0.95
MODEL_MAX_TOKENS=4096
ENABLE_SYSTEM_PROMPTS=true

# ================================
# API KEYS (REQUIRED)
# ================================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ================================
# VECTOR DATABASE CONFIGURATION
# ================================
VECTOR_BACKEND=qdrant
# Options: qdrant, pinecone, local

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# ================================
# PERFORMANCE OPTIMIZATION
# ================================
# CUDA Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST=6.0;6.1;7.0;7.5;8.0;8.6

# CPU Configuration
OMP_NUM_THREADS=4

# Memory Management
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# ================================
# SECURITY SETTINGS
# ================================
# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/ai-dev/server.crt
SSL_KEY_PATH=/etc/ssl/certs/ai-dev/server.key

# CORS Settings
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=INFO
DEBUG=false

# ================================
# STORAGE CONFIGURATION
# ================================
DATA_DIR=/app/data
RUNS_DIR=/app/.runs
LOGS_DIR=/app/logs

# ================================
# ADVANCED SETTINGS
# ================================
# Python Configuration
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# FastAPI Configuration
FASTAPI_ENV=production
FASTAPI_DEBUG=false

# Uvicorn Configuration
UVICORN_LOOP=uvloop
UVICORN_HTTP=httptools

# ================================
# RUNPOD SPECIFIC VARIABLES
# ================================
# These are automatically set by RunPod
# RUNPOD_POD_ID=auto_set_by_runpod
# RUNPOD_PUBLIC_IP=auto_set_by_runpod
# RUNPOD_TCP_PORT_8000=auto_set_by_runpod
# RUNPOD_TCP_PORT_8443=auto_set_by_runpod
