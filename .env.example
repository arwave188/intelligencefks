# LLM Backend Configuration
LLM_BACKEND=openai
LLM_MODEL=gpt-4o-mini
USE_TRANSFORMERS=false

# LLM API Keys (online)
OPENAI_API_KEY=changeme
OPENAI_BASE_URL=https://api.openai.com/v1
ANTHROPIC_API_KEY=
TOGETHER_API_KEY=
FIREWORKS_API_KEY=
DEEPINFRA_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434

# Vector Database Configuration
VECTOR_BACKEND=qdrant
# Qdrant (local)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
# Qdrant Cloud
QDRANT_URL=
QDRANT_API_KEY=
# Pinecone
PINECONE_API_KEY=
PINECONE_ENV=us-east-1-aws
PINECONE_INDEX=ai-dev-code
# Collections/Indexes
QDRANT_COLLECTION_CODE=code_chunks
QDRANT_COLLECTION_SUMMARIES=summaries

# RAG Configuration
RAG_TOPK=8
RAG_MAX_PER_FILE=3
RAG_MIN_SIMILARITY=0.7
EMBEDDING_MODEL=jinaai/jina-embeddings-v3

# Sandbox Configuration
SANDBOX_TIMEOUT=180
SANDBOX_CPUS=2
SANDBOX_MEMORY=4g
SANDBOX_IMAGE=python:3.11-slim

# Agent Configuration
MAX_ITERS=5
LOG_LEVEL=INFO
WORKSPACE_PATH=./

# API Configuration
PORT=8000
HOST=0.0.0.0
PUBLIC_BASE_URL=http://localhost:8000

# Training Configuration
TRAIN_BATCH_SIZE=4
EVAL_BATCH_SIZE=8
LEARNING_RATE=2e-4
NUM_EPOCHS=2
MAX_SEQ_LENGTH=4096
